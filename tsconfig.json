{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["modules/lux-dashboard/src/*"]
    },
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": "."
  }
}
