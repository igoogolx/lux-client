{
  "files": [
    "src",
    "core",
    "assets",
    "scripts"
  ],
  "asarUnpack": [
    "core",
    "src",
    "assets",
    "scripts"
  ],
  "directories": {
    "output": "out"
  },
  "win": {
    "requestedExecutionLevel": "requireAdministrator",
    "target": [
      {
        "target": "nsis"
      }
    ],
    "icon": "assets/logo.ico"
  },
  "mac": {
    "icon": "assets/logo.icns",
    "target": {
      "target": "dmg"
    }
  },
  "nsis": {
    "perMachine": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": "always"
  }
}
