{
  "files": [
    "src",
    "core",
    "assets",
    "scripts"
  ],
  "asarUnpack": [
    "core",
    "src",
    "assets",
    "scripts"
  ],
  "directories": {
    "output": "out"
  },
  "win": {
    "requestedExecutionLevel": "requireAdministrator",
    "target": [
      {
        "target": "nsis",
        "arch": "ia32"
      }
    ],
    "icon": "assets/logo.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/logo.icns",
    "arch": [
      "x64",
      "arm64"
    ]
  },
  "nsis": {
    "perMachine": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": "always"
  }
}
